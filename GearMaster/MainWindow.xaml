<Window
    Height="400"
    ResizeMode="NoResize"
    Title="Gear Master"
    Width="600"
    mc:Ignorable="d"
    x:Class="GearMaster.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GearMaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10" d:DataContext="{d:DesignInstance viewModel:MainVM}">
        <local:ParameterControl x:Name="OuterRadiusParameter" />

        <local:ParameterControl x:Name="HoleRadiusParameter" />

        <local:ParameterControl x:Name="ThicknessParameter" />

        <local:ParameterControl x:Name="ToothHeightParameter" />

        <local:ParameterControl x:Name="ToothCountParameter" />

        <Button
            Click="BuildButton_OnClick"
            Content="Build"
            HorizontalAlignment="Left"
            Width="100"
            x:Name="BuildButton" />

        <TextBlock Text="{Binding ErrorMessage}" x:Name="ErrorMessageTextBlock" />
    </StackPanel>
</Window>